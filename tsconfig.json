{
  "compilerOptions": {
    "module": "ESNext", // required
    "target": "ESNext", // required
    "types": ["node", "jest"],
    "allowJs": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "build",
    "emitDecoratorMetadata": true, // required
    "experimentalDecorators": true, // required
    "declaration": false,
    "importHelpers": true, // required
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node", // required
    "esModuleInterop": true, // required
    "baseUrl": ".",
    "paths": {
      "@screener-utils/*": ["src/utils/*"],
      "@screener-services/*": ["src/services/*"],
      "@screener-managers/*": ["src/managers/*"],
      "@screener-types/*": ["src/types/*"],
      "@screener-config/*": ["src/config/*"],
      "~/*": ["*"]
    }
  },
  "exclude": [
    "**/*.test.*", 
    "**/__mocks__/*", 
    "**/__tests__/*",
    "**/build/*"
  ],
  "indent":[true, "spaces", 2]
}